{
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "coveralls": "^3.1.1",
    "mocha": "^11.7.5"
  },
  "type": "module",
  "scripts": {
    "test": "mocha test-suite/*.test.js",
    "test:coverage": "c8 mocha test-suite/*.test.js",
    "test:watch": "mocha --watch test-suite/*.test.js",
    "coverage:report": "c8 report --reporter=text-lcov | coveralls"
  }
}